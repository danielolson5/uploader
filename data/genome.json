{ "name": "Genome",
  "interface": {
      "intro": {
	  "title": "genome sequence submission",
	  "text": "A genome sequence submission requires a sequence file in fasta format and a filled out metadata Excel spreadsheet.",
	  "excel": true,
	  "json": false
      },
      "inputs": [ 
	  { 
	      "type": "dropdown",
	      "filetype": [ "xlsx" ],
	      "label": "select metadata file(s)",
	      "help": null,
	      "default": null,
	      "data": null,
	      "isMetadata": true,
	      "aweVariable": "metadata"
	  },
	  { 
	      "type": "multiselect",
	      "filetype": [ "fasta", "fna" ],
	      "label": "select sequence file(s)",
	      "help": null,
	      "default": null,
	      "data": null,
	      "isMetadata": false,
	      "aweVariable": "infile" }
      ]
  },
  "awe": {
      "tasks": [
	  {
	      "cmd": {
		  "args": "infile",
		  "description": "validate sequence",
		  "name": "kb_validate_sequence.pl"
	      },
	      "dependsOn": [],
	      "inputs": {
		  "infile": {
		      "host": "##SHOCK##",
		      "node": ""
		  },
		  "attributes":
		  {
		      "host": "##SHOCK##",
		      "node": ""
		  }
	      },
	      "outputs": [ "outfile" ],
	      "taskid": "0",
	      "totalwork": 1
	  },
	  {
	      "cmd": {
		  "args": "infile",
		  "description": "create workspace object",
		  "name": "kb_create_workspace_object.pl"
	      },
	      "dependsOn": [ 0 ],
	      "inputs": [ "infile" ],
	      "outputs": {
		  "outfile": {
		      "host": "##SHOCK##",
		      "node": "-"
		  }
	      },
	      "taskid": "1",
	      "totalwork": 1
	  }
      ]
  },
  "metadata": {
      "name": "KBaseGenomeTemplate",
      "label": "KBase Genome Metadata Template",
      "description": "Template to specify meta data for loading a genome from a FASTA sequence file to a KBaseGenomes.Genome typed object in a workspace",
      "cvs": {
          "domain": {
              "Bacteria":true,
              "Archaea":true,
              "Eukaryota":true,
              "Unknown":true
          }
      },
      "groups" : {
          "basic_info":{
              "name":"BasicGenomeInfo",
              "label":"BasicGenomeInfo",
              "description":"basic genome information",
              "mandatory": true,
              "toplevel":true,
              "subgroups": {},
              "fields":{
                  "scientific_name": {
                      "name":"scientific_name",
                      "label":"Scientific Name",
                      "description":"the scientific name of the genome",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" }
                  },
                  "domain": {
                      "name":"domain",
                      "label":"Domain",
                      "description":"the domain of the genome",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"cv", "value":"domain" }
                  },
                  "taxonomy": {
                      "name":"taxonomy",
                      "label":"Taxonomy",
                      "description":"the taxonomy of the genome",
                      "type":"text",
                      "default":"Unknown",
                      "mandatory":"true",
                      "validation": { "type":"none" }
                  },
		  "source": {
                      "name":"source",
                      "label":"Source",
                      "description":"the original source location of the genome, e.g. NCBI",
                      "type":"text",
                      "default":"kbase",
                      "mandatory":"true",
                      "validation": { "type":"none" }
                  },
		  "source-id": {
                      "name":"source-id",
                      "label":"Source ID",
                      "description":"the ID of the genome sequence in the source database",
                      "type":"text",
                      "default":"",
                      "mandatory":"false",
                      "validation": { "type":"none" }
                  }
              }
          }
      }
  }
}